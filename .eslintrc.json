{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true    
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "max-len": "off",
        "no-else-return": {"allowElseIf": true},
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
          ]
    }
}
